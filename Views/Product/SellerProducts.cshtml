@model List<WebProject.Models.Product>
    @using WebProject.Models
    @{
    ViewData["Title"] = "Satýcý Ürünleri";
    var seller = ViewBag.Seller as ApplicationUser;
    }

    <h2 class="mb-4">
        @if (seller != null)
    {
        @($"{(string.IsNullOrWhiteSpace(seller.FullName) ? seller.UserName : seller.FullName)} adlý satýcýnýn ürünleri")
    }
    else
    {
        <text>Ürünler</text>
    }
    </h2>

    <!-- Filtreleme Alaný -->
    <div class="d-flex gap-2 mb-3">
        <select id="productFilterField" class="form-select w-auto">
            <option value="name">Ürün Adý</option>
            <option value="description">Açýklama</option>
            <option value="seller">Satýcý</option>
        </select>
        <input type="text" id="productSearch" class="form-control w-25" placeholder="Ara..." />
    </div>

    <!-- Ürün Tablosu -->
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Kategori</th>
                <th>Görsel</th>
                <th class="name">Ad</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th class="description">Açýklama</th>
                <th class="seller">Satýcý</th>
            </tr>
        </thead>
        <tbody id="productTableBody">
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                    <img src="@item.ImageUrl" alt="Ürün" style="max-height: 60px;" class="img-thumbnail" />
                    }
                    else
                    {
                    <span class="text-muted">Yok</span>
                    }
                </td>
                <td class="name">@item.Name</td>
                <td>@($"{item.Price:C}")</td>
                <td>@item.Stock</td>
                <td class="description">@item.Description</td>
                <td class="seller">
                    @if (item.User != null)
                    {
                    <a asp-controller="User" asp-action="Profile" asp-route-id="@item.User.Id">
                        @item.User.UserName
                    </a>
                    }
                    else
                    {
                    <span class="text-muted">-</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>

    @section Scripts {
        <script>
        const searchInput = document.getElementById("productSearch");
        const filterField = document.getElementById("productFilterField");
        const rows = document.querySelectorAll("#productTableBody tr");

        function filterProducts() {
            const term = searchInput.value.toLowerCase().trim();
            const field = filterField.value;

            rows.forEach(row => {
                const cell = row.querySelector(`.${field}`);
                const text = cell?.innerText.toLowerCase() || "";
                const matches = term === "" || text.includes(term);
                row.style.display = matches ? "" : "none";
            });
        }

        searchInput.addEventListener("input", filterProducts);
        filterField.addEventListener("change", filterProducts);
        </script>
    }
