@model List<Category>

    <h3>Kategoriler</h3>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Üst Kategori</th>
                <th>Ýþlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.ParentCategory?.Name ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Silmek istediðine emin misin?')">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-success">+ Yeni Kategori</a>
