@model List<WebProject.Models.Category>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Kategoriler</h3>
            <a asp-action="Create" class="btn btn-success">+ Yeni Kategori Ekle</a>
        </div>

        <div class="card">
            <div class="card-body">
                <partial name="_CategoryTree" model="Model" />
            </div>
        </div>
    </div>

    @section Styles {
        <style>
            ul.list-group {
                margin-left: 10px;
                border-left: 1px solid #dee2e6;
                padding-left: 10px;
            }

            .list-group-item {
                background-color: #f8f9fa;
                margin-bottom: 5px;
                border-radius: 4px;
            }
        </style>
    }
