@model List<Product>
    @{
    ViewData["Title"] = "Tüm Ürünler";
    }

    <h2 class="mb-4">Tüm Ürünler</h2>

    <div class="d-flex gap-2 mb-3">
        <select id="filterField" class="form-select w-auto">
            <option value="name">Ürün Adý</option>
            <option value="description">Açýklama</option>
            <option value="seller">Satýcý</option>
            <option value="category">Kategori</option>
        </select>
        <input type="text" id="productSearch" class="form-control w-25" placeholder="Arama terimi yazýn..." />
    </div>

    <a asp-action="AddProduct" class="btn btn-success mb-3">Yeni Ürün Ekle</a>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Kategori</th>
                <th>Görsel</th>
                <th>Ad</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>Açýklama</th>
                <th>Satýcý</th>
                <th style="width: 160px;">Ýþlemler</th>
            </tr>
        </thead>
        <tbody id="productTableBody">
            @foreach (var item in Model)
        {
            <tr>
                <td class="category">@item.Category?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                    <img src="@item.ImageUrl" alt="Ürün" style="max-height: 60px;" class="img-thumbnail" />
                    }
                    else
                    {
                    <span class="text-muted">Yok</span>
                    }
                </td>
                <td class="name">@item.Name</td>
                <td>@($"{item.Price:C}")</td>
                <td>@item.Stock</td>
                <td class="description">@item.Description</td>
                <td class="seller">
                    @if (item.User != null)
                    {
                    <a asp-controller="User" asp-action="Profile" asp-route-name="@item.User.UserName">
                        @item.User.UserName
                    </a>
                    }
                    else
                    {
                    <span class="text-muted">-</span>
                    }
                </td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Düzenle</a>
                    <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @section Scripts {
        <script>
        const searchInput = document.getElementById("productSearch");
        const filterSelect = document.getElementById("filterField");

        searchInput.addEventListener("input", function () {
            const term = this.value.toLowerCase().trim();
            const field = filterSelect.value;
            const rows = document.querySelectorAll("#productTableBody tr");

            rows.forEach(row => {
                const cell = row.querySelector(`.${field}`);
                const text = cell?.innerText.toLowerCase() || "";
                const matches = term === "" || text.includes(term);
                row.style.display = matches ? "" : "none";
            });
        });

        // Dropdown deðiþince tetikleyici: input event'ini yeniden çalýþtýrýr
        filterSelect.addEventListener("change", () => {
            searchInput.dispatchEvent(new Event("input"));
        });
        </script>
    }
